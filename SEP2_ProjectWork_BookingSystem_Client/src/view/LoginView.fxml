<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="420.0" prefWidth="610.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginViewController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="78.0" prefWidth="600.0">
               <children>
                  <Label alignment="BOTTOM_CENTER" prefHeight="78.0" prefWidth="277.0" text="Sign In">
                     <font>
                        <Font size="33.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" prefHeight="28.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="22.0" prefWidth="410.0" text="      Before you sign in or register, you can input IP address of server  : " />
                  <TextField fx:id="ipAddressTextField" alignment="BOTTOM_LEFT" prefHeight="23.0" prefWidth="149.0" />
               </children>
            </HBox>
            <HBox prefHeight="178.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="180.0" prefWidth="600.0">
                     <children>
                        <Label alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="288.0" text="Email address">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="600.0">
                           <children>
                              <VBox prefHeight="44.0" prefWidth="85.0" />
                              <TextField fx:id="emailTextField" prefHeight="31.0" prefWidth="282.0" />
                           </children>
                        </HBox>
                        <Label alignment="BOTTOM_CENTER" prefHeight="30.0" prefWidth="252.0" text="Password">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="600.0">
                           <children>
                              <VBox prefHeight="54.0" prefWidth="85.0" />
                              <TextField fx:id="passwordTextField" prefHeight="30.0" prefWidth="284.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="424.0">
                     <children>
                        <Label prefHeight="56.0" prefWidth="212.0" />
                        <Label alignment="CENTER" prefHeight="45.0" prefWidth="210.0" text="Not the hotel member?" />
                        <Button mnemonicParsing="false" onAction="#clickRegisterButton" prefHeight="38.0" prefWidth="132.0" text="Register" textFill="#367fd7">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox prefHeight="38.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="38.0" prefWidth="85.0" />
                  <Label fx:id="errorLabel" prefHeight="34.0" prefWidth="463.0" text="Error" textFill="#fd0000">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="50.0" prefWidth="85.0" />
                  <Button mnemonicParsing="false" onAction="#clickSignInButton" prefHeight="38.0" prefWidth="281.0" text="Sign In" textFill="#0f81f5">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
