<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="440.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PasswordViewController">
   <children>
      <VBox prefHeight="410.0" prefWidth="534.0">
         <children>
            <HBox prefHeight="86.0" prefWidth="610.0">
               <children>
                  <Label alignment="BOTTOM_CENTER" prefHeight="70.0" prefWidth="473.0" text="Edit password">
                     <font>
                        <Font size="33.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="210.0" prefWidth="610.0">
               <children>
                  <VBox prefHeight="196.0" prefWidth="600.0">
                     <children>
                        <Label alignment="BOTTOM_CENTER" prefHeight="34.0" prefWidth="378.0" text="Old password">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="600.0">
                           <children>
                              <VBox prefHeight="38.0" prefWidth="130.0" />
                              <TextField fx:id="oldText" prefHeight="31.0" prefWidth="282.0" />
                           </children>
                        </HBox>
                        <Label alignment="BOTTOM_CENTER" prefHeight="35.0" prefWidth="384.0" text="New Password">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="600.0">
                           <children>
                              <VBox prefHeight="49.0" prefWidth="130.0" />
                              <TextField fx:id="newText" prefHeight="30.0" prefWidth="284.0" />
                           </children>
                        </HBox>
                        <Label alignment="BOTTOM_CENTER" prefHeight="24.0" prefWidth="360.0" text="Verification">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="600.0">
                           <children>
                              <VBox prefHeight="49.0" prefWidth="130.0" />
                              <TextField fx:id="verText" prefHeight="30.0" prefWidth="284.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="38.0" prefWidth="600.0">
               <children>
                  <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="34.0" prefWidth="351.0" text="Error" textFill="#fd0000">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="50.0" prefWidth="108.0" />
                  <Button mnemonicParsing="false" onAction="#clickBackBtn" prefHeight="38.0" prefWidth="110.0" text="BACK">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <VBox prefHeight="50.0" prefWidth="136.0" />
                  <Button mnemonicParsing="false" onAction="#clickSaveBtn" prefHeight="38.0" prefWidth="104.0" text="SAVE" textFill="#0f81f5">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
